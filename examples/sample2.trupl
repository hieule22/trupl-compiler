program looper;
	# This is a real trupl program.
	# Here's the declarative part.
	a: int;
	b: bool;

begin
	# Here is the executable part.
	a := 0;
	# There are no boolean literals, so we have to 
	# 	initialize bools like this:
	b := 0 = 0; # 0=0 is true.

	while b loop begin
		if a <= 2 then begin
			a := (a + 1) * 3;
		end
		else begin
			a := (a - 1) * 2;
		end;

		b := a > 1;

		print a;
	end; # end while
end; # end program